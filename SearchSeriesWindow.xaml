<Window x:Class="Book.SearchSeriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Book"
        mc:Ignorable="d"
        Title="SearchSeriesWindow" Height="300" Width="250">
    <Grid Margin="0,0,0,0">
        <DataGrid x:Name="SeriesDataGrid" AutoGenerateColumns="False" d:ItemsSource="{Binding seriesCollection}" Margin="0,36,0,62">
            <DataGrid.Columns>
                <DataGridTextColumn Header="시리즈ID" Binding="{Binding id}"/>
                <DataGridTextColumn Header="시리즈명" Binding="{Binding seriesName}"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" Margin="5,0,0,0"/>
        <Button Content="검색" HorizontalAlignment="Left" Margin="188,0,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.733,1.024" Height="27"/>
        <Button Content="확인" HorizontalAlignment="Center" Margin="0,227,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.733,1.024" Height="27"/>
    </Grid>
</Window>
