<mah:MetroWindow x:Class="Book.NewBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Book"
                                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="NewBookWindow" Height="280" Width="400">
    <Grid>
        <TextBlock FontFamily="Maplestory" HorizontalAlignment="Left" Margin="40,23,0,0" TextWrapping="Wrap" Text="제목" VerticalAlignment="Top"/>
        <TextBox x:Name="title" mah:TextBoxHelper.Watermark="책제목" HorizontalAlignment="Left" Margin="76,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="19"/>
        <TextBlock FontFamily="Maplestory" HorizontalAlignment="Left" Margin="40,54,0,0" TextWrapping="Wrap" Text="저자" VerticalAlignment="Top"/>
        <TextBox x:Name="author" mah:TextBoxHelper.Watermark="저자명" HorizontalAlignment="Left" Margin="76,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="19"/>
        <TextBlock Text="출판사" FontFamily="Maplestory" HorizontalAlignment="Left" Margin="40,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="publisher" mah:TextBoxHelper.Watermark="출판사명" HorizontalAlignment="Left" Margin="76,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="19"/>
        <TextBlock Text="ISBN" FontFamily="Maplestory" HorizontalAlignment="Left" Margin="216,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="isbn" mah:TextBoxHelper.Watermark="ISBN" HorizontalAlignment="Left" Margin="250,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="19"/>
        <TextBlock Text="ISNI" FontFamily="Maplestory" HorizontalAlignment="Left" Margin="216,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="isni" mah:TextBoxHelper.Watermark="ISNI" HorizontalAlignment="Left" Margin="250,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="19"/>
        <TextBlock Text="분류" FontFamily="Maplestory" HorizontalAlignment="Left" Margin="216,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <ComboBox SelectedIndex="0" x:Name="KDC" SelectedValuePath="Tag" HorizontalAlignment="Left" Margin="250,80,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Name="item1" Content="총류" Tag="TOTAL"/>
            <ComboBoxItem Name="item2" Content="철학" Tag="PHILOSOPHY"/>
            <ComboBoxItem Name="item3" Content="종교" Tag="RELIGION"/>
            <ComboBoxItem Name="item4" Content="사회과학" Tag="SOCIAL_SCIENCE"/>
            <ComboBoxItem Name="item5" Content="자연과학" Tag="NATURAL_SCIENCE"/>
            <ComboBoxItem Name="item6" Content="기술과학" Tag="SCIENCE_TECHNOLOGY"/>
            <ComboBoxItem Name="item7" Content="예술" Tag="ART"/>
            <ComboBoxItem Name="item8" Content="언어" Tag="LANGUAGE"/>
            <ComboBoxItem Name="item9" Content="문학" Tag="LITERATURE"/>
            <ComboBoxItem Name="item10" Content="역사" Tag="HISTORY"/>
        </ComboBox>
        <mah:ToggleSwitch FontFamily="Maplestory" Height="34" Margin="76,118,0,0" VerticalAlignment="Top" Width="100" Toggled="ToggleSeries"/>
        <TextBlock Text="시리즈" FontFamily="Maplestory" HorizontalAlignment="Left" Margin="40,128,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox IsEnabled="False" x:Name="seriesId" mah:TextBoxHelper.Watermark="시리즈ID" HorizontalAlignment="Left" Margin="98,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="19"/>
        <TextBlock Text="시리즈 ID" FontFamily="Maplestory" HorizontalAlignment="Left" Margin="40,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Click="Confirm_Click" Content="확인" HorizontalAlignment="Center" Margin="0,210,0,0" VerticalAlignment="Top"/>

    </Grid>
</mah:MetroWindow>
