<mah:MetroWindow x:Class="Book.PasswordResetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:Book"
        mc:Ignorable="d"
        Title="패스워드찾기" Height="200" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="23,21,0,0" TextWrapping="Wrap" Text="아이디" VerticalAlignment="Top"/>
        <TextBox x:Name="usernameBox" Style="{DynamicResource MahApps.Styles.TextBox.Button}" mah:TextBoxHelper.Watermark="아이디" HorizontalAlignment="Left" Margin="113,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox PasswordChanged="PasswordChangeHandler" x:Name="passwordBox" Style="{DynamicResource MahApps.Styles.PasswordBox.Button}" HorizontalAlignment="Left" Margin="113,52,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="23,57,0,0" TextWrapping="Wrap" Text="패스워드" VerticalAlignment="Top"/>
        <PasswordBox PasswordChanged="PasswordChangeHandler" x:Name="passwordConfirmBox" Style="{DynamicResource MahApps.Styles.PasswordBox.Button}" HorizontalAlignment="Left" Margin="113,87,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="23,92,0,0" TextWrapping="Wrap" Text="패스워드 확인" VerticalAlignment="Top"/>
        <Button x:Name="PasswordResetConfirmButton" Click="PasswordReset_Confirm" Style="{DynamicResource MahApps.Styles.Control.WindowCommands}" FontFamily="Maplestory" Content="확인" HorizontalAlignment="Center" Margin="0,129,0,0" VerticalAlignment="Top"/>
        <TextBlock FontSize="8" HorizontalAlignment="Left" Margin="23,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="39" Width="132"><Run Text="본인인증"/><Run Text=" API 미사용으로"/><LineBreak/><Run Text="서버가 임시로 CI값을 받았음을 상정"/></TextBlock>
    </Grid>
</mah:MetroWindow>
